  "version": "0.2.0",
  "compounds": [
    {
      "name": "web",
      "configurations": [
        "web - server",
        "web - client"
      ]
    }
  ],
  "configurations": [
    {
      "name": "web - server",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}/apps/web",
    },
    {
      "name": "web - client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/web",
