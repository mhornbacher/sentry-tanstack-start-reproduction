{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/convex/_generated"
    ]
  },
  "extends": ["ultracite/core", "ultracite/react"],
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": "off"
      },
      "style": {
        "useFilenamingConvention": "off",
        "useBlockStatements": "off",
        "noNestedTernary": "off",
        "useConsistentTypeDefinitions": "off"
      },
      "suspicious": {
        "useAwait": "off"
      },
      "performance": {
        "noNamespaceImport": "off",
        "noBarrelFile": "off"
      },
      "nursery": {
        "noParametersOnlyUsedInRecursion": "off",
        "noUndeclaredEnvVars": "off",
        "noLeakedRender": "off",
        "noShadow": "off"
      }
    }
  }
}
